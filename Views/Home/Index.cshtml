
<div class="text-center">

@if (User.Identity.IsAuthenticated)
{
    <h1 class="display-4" style="font-size: 28px;">Hello @User.Identity.Name!</h1>
    <form asp-action="Logout" asp-controller="Account" method="post">
        <button type="submit" class="btn btn-primary">Log out</button>
    </form>
}
    else
    {
        <h1 class="display-4" style="font-size: 28px;">Login to your Shopping Lists</h1>
        <p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Log in</a>
        </p>
    }
</div>
