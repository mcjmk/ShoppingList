@model IEnumerable<ShoppingList.Models.UserShoppingList>

@{
    ViewData["Title"] = "Shopping Lists";
}

<h2>Shopping Lists</h2>

<a asp-action="Create" class="btn btn-primary">Create New Shopping List</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>@list.ShoppingListName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@list.ShoppingListId" class="btn btn-primary">View</a>
                    <form asp-action="Delete" asp-route-id="@list.ShoppingListId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
